<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:weightSum="1.0"
            android:background="@color/colorAccent">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".50">

                <ImageView
                    android:id="@+id/menuimg"
                    android:layout_width="13dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/menulogo" />

                <ImageView
                    android:id="@+id/tximg"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:onClick="dlView"
                    app:srcCompat="@drawable/tx" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".50">

                <ImageView
                    android:id="@+id/gwimg"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/gwlogo" />
                <ImageView
                    android:id="@+id/tvimg"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="25dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/tvlogo"
                    />
                <ImageView
                    android:id="@+id/xzimg"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="25dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/xzlogo" />
                <ImageView
                    android:id="@+id/ssimg"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="25dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/sslogo" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:weightSum="1.0"
            android:background="@color/colorAccent">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".20"
                android:weightSum="1.0">

                <TextView
                    android:id="@+id/item_zb"
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="直播"
                    android:textColor="#EEDFCC"
                    android:textSize="14dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".20"
                android:weightSum="1.0">

                <TextView
                    android:id="@+id/item_zh"
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:layout_gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="14dp"
                    android:gravity="center"
                    android:text="综合" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".20"
                android:weightSum="1.0">

                <TextView
                    android:id="@+id/item_gf"
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:layout_gravity="center"
                    android:textColor="#EEDFCC"
                    android:textSize="14dp"
                    android:gravity="center"
                    android:text="追番" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".20"
                android:weightSum="1.0">

                <TextView
                    android:id="@+id/item_ys"
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:layout_gravity="center"
                    android:textColor="#EEDFCC"
                    android:textSize="14dp"
                    android:gravity="center"
                    android:text="影视" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".20"
                android:weightSum="1.0">

                <TextView
                    android:id="@+id/item_zl"
                    android:layout_width="match_parent"
                    android:layout_height="16dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="专栏"
                    android:textColor="#EEDFCC"
                    android:textSize="14dp" />
            </LinearLayout>
        </LinearLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/mainViewPager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:id="@+id/item_syimg"
                    app:srcCompat="@drawable/xzzy"
                    android:layout_marginTop="4dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:id="@+id/item_sy"
                    android:textColor="@color/colorAccent"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="首页"
                    android:textSize="10dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:id="@+id/item_fqimg"
                    app:srcCompat="@drawable/wxzfq"
                    android:layout_marginTop="4dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:id="@+id/item_fq"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="分区"
                    android:textSize="10dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:id="@+id/item_dtimg"
                    app:srcCompat="@drawable/wxzdt"
                    android:layout_marginTop="4dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:id="@+id/item_dt"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="动态"
                    android:textSize="10dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:id="@+id/item_xximg"
                    app:srcCompat="@drawable/wxzxx"
                    android:layout_marginTop="4dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:id="@+id/item_xx"
                    android:gravity="center_horizontal|center_vertical"
                    android:textSize="10dp"
                    android:text="消息"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/drawermenu"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#EEDFCC"
        android:orientation="vertical" >
            <include layout="@layout/left_menu"></include>
    </LinearLayout>

</android.support.v4.widget.DrawerLayout>
